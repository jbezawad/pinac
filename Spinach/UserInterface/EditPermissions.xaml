<Window x:Class="Spinach.EditPermissions"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="EditPermissions" Icon="/Spinach;component/Icon.JPG" WindowStartupLocation="CenterScreen" Height="250" Width="250" ResizeMode="NoResize">
    <Grid Background="Lavender">
        <ComboBox Height="23" Margin="49,61,0,0" Name="cbUser" VerticalAlignment="Top" HorizontalAlignment="Left" Width="120" SelectionChanged="cbUser_SelectionChanged"></ComboBox>
        <CheckBox Margin="49,99,0,0" Name="chkRead" HorizontalAlignment="Left" Width="50" Height="16" VerticalAlignment="Top" Checked="chkRead_Checked">Read</CheckBox>
        <CheckBox Margin="123,99,0,0" Name="chkWrite" HorizontalAlignment="Left" Width="73" Height="16" VerticalAlignment="Top" Checked="chkWrite_Checked">Write</CheckBox>
        <Label Height="28" Margin="49,26,59,0" Name="lblUser" VerticalAlignment="Top">User</Label>
        <Button Height="23" Margin="49,0,0,61" Name="btnSubmit" VerticalAlignment="Bottom" Click="btnChange_Click" HorizontalAlignment="Left" Width="50">Update</Button>
        <Button Height="23" Margin="119,0,0,61" Name="btnCancel" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="50" Click="btnCancel_Click">Cancel</Button>
        <Button Height="23" Margin="49,0,59,12" Name="btnCngOwner" VerticalAlignment="Bottom" Click="btnCngOwner_Click">Change Owner</Button>
    </Grid>
</Window>
